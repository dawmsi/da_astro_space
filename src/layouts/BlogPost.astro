---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const { title, updatedDate, heroImage } = Astro.props;
---

<article>
  <div class="hero-image">
    {
      heroImage && (
        <img
          width={1020}
          height={510}
          src={heroImage}
          alt=""
        />
      )
    }
  </div>
  <div class="prose">
    <div class="title">
      <div class="date">
        {
          updatedDate && (
            <div class="last-updated-on">
              Last updated on
            </div>
          )
        }
      </div>
      <h1>{title}</h1>
      <hr />
    </div>
    <slot />
  </div>
</article>
